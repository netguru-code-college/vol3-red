<% @estates.each_slice(3) do |slice| %>
  <div class="wrapper mt-4">
    <div class="row">
      <% slice.each do |estate| %>
        <div class="col-md-4">
          <div class="card mb-4" style="width: 100%">
          <%= image_tag(estate.get_estate_image, class: "card-img-top", alt: "Estate") %>
            <div class="card-body">
              <h5 class="card-title"><%= estate.name %></h5>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">
                  <%= link_to 'Details', dashboard_estate_path(estate), class: "btn btn-outline-info mt-2" %>
                  <%= link_to 'Archive', root_path, class: "btn btn-outline-danger mt-2 " %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
